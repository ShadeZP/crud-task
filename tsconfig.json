{
  "compilerOptions":
    {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}
